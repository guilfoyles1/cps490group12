doctype html
html
    head
        title Update User Info
        link(rel="stylesheet", href="/styles.css")

    body
        .container        
            header
                h1 Welcome, #{name}!
                p How are you doing today?

            main
                section
                    if message
                        p.alert #{message}
                    br

                    // Username Update Form
                    form(action="/update-username" method="POST")
                        label(for="newUsername") New Username:
                        input(type="text" name="newUsername" required)
                        button(type="submit") Update Username
                    br

                    // Email update Form
                    form(action="/update-email" method="POST")
                        label(for="newEmail") New Email:
                        input(type="text" name="newEmail" required)
                        button(type="submit") Update Email
                    br

                    // Password Update Form
                    form(action="/update-password]" method="POST")
                        label(for="newPassword") New Password:
                        input(type="text" name="newPassword" required)
                        button(type="submit") Update Password