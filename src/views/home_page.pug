html
    head
        title Default Home Page
        link(rel="stylesheet", href="/styles.css")
    body
        .container
            header
                h1 Messenger Application

            main
                if (!isLoggedIn)
                    // Signup Button
                    button(type="button" style="margin-right: 10px;" onClick="window.location.href = '/signup';") Signup
                    // Login Button
                    button(type="button" onClick="window.location.href = '/login';") Login
                else
                    h4(style="color:black") Welcome back #{username}!
                    // Account Button
                    button(type="button" style="margin-right: 10px;margin-top: 20px;" onClick="window.location.href = '/protected_page';") Account
                    // Chats Button
                    button(type="button" onClick="window.location.href = '/chat';") Chats
                    br
                    br
                    // Logout Button
                    button(type="button" style="background-color: red; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer;" onClick="window.location.href = '/logout';") Logout

